<h1>Students</h1>
<p><%= link_to "Create New Student", new_student_path %></p>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th class="col-span-3">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.email %></td>
                <td><%= link_to "View", student %></td>
            </tr>
        <% end %>
    </tbody>
</table>